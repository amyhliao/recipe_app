<div class="ques-answer cf">
  <h3>Add a Recipe:</h3>
  <%= form_for @recipe do |f| %>
    Title: <%= f.text_field :title %>
    <div class="body-content"><%= f.text_area :description %></div>
    <%= f.text_area :instruction %>
    <%= f.text_field :prep_time %>
    <%= f.text_field :cook_time %>
    <%= f.text_field :total_time %>
    <%= f.fields_for @tag do |o| %>
      Categories: <%= o.text_field :name, placeholder: "seperated by commas"  %>
      <div class="submit-btn"><%= f.submit "Submit" %></div>
    <% end %>
  <% end %>

</div>